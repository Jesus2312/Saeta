<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.saeta.activities.MapaGeneralActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mapa General"
        android:id="@+id/textView7" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Recargar Mapa"
        android:id="@+id/button5"
        android:background="#ff2873ec"
        android:textColor="#fff8fafe"
        android:onClick="recargarMapa" />

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:id="@+id/WebView1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Mapa"
        android:id="@+id/button4"
        android:background="#ff2873ec"
        android:textColor="#fff8fafe"
        android:onClick="guardarMapaClick" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
