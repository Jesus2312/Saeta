    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Localizador"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre:"
        android:id="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/LblNombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Domicilio:"
        android:id="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/LblDomicilio" />

     <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Imagen"
         android:background="#ff2873ec"
         android:textStyle="bold"
        android:id="@+id/BtGuardarImagen"
        android:onClick="GuardarMapa"
         android:textColor="#ffffffff" />

    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/WbView"
        android:layout_width="fill_parent"
        android:layout_height="290dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Mapa"
        android:id="@+id/BtEliminarMapa"
        android:background="#ff2873ec"
        android:textStyle="bold"
        android:onClick="DeleteMap"
        android:textColor="#ffffffff" />
